@model NienLuanCoSo.TT_TRAOTANG

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa</h2>

<h3>Bạn chắc chắn muốn xóa?</h3>
<div>
    <h4>Thông tin trao tặng</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
          Ngày tặng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NGAYTANG)
        </dd>

        <dt>
          Ảnh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ANH_TT)
        </dd>

        <dt>
          Chiến dịch
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CHIENDICH.TEN_CD)
        </dd>

        <dt>
        Nơi tặng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NOIHOTRO.DIACHI)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Về danh sách", "Index")
        </div>
    }
</div>
