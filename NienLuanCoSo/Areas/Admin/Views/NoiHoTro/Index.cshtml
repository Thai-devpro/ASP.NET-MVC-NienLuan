@model IEnumerable<NienLuanCoSo.NOIHOTRO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách nơi hỗ trợ</h2>

<div class="form-group form-inline">
    <form style="margin: 0px; padding: 0px;">
        <select name="Search" class="form-control">
            <option value="all">Tất cả</option>
            <option value="top10">Top 10 nơi được trao tặng nhiều nhất</option>
            <option value="top10thang">Top 10 nơi được trao tặng nhiều nhất tháng này</option>
            <option value="top10nam">Top 10 nơi được trao tặng nhiều nhất năm</option>
        </select>

        <input type="submit" class="btn btn-success" value="Tìm kiếm" />
    </form>
</div>
<input type="button" class="btn btn-success" value="Thêm mới" onclick="location.href='@Url.Action("Create", "NoiHoTro")'" />
<table class="table">
    <tr>

        <th>
            Mạnh thường quân
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Tình trạng
        </th>
        <th>
            Cần hỗ trợ
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            Ảnh
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.MANHTHUONGQUAN.HOTEN_MTQ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DIACHI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TINHTRANG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CANHOTRO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TRANGTHAI_NHT)
            </td>
            <td>
                <img src="@Url.Content("~/Content/images/noihotro/"+item.ANH_NTH)" width="45" />
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MANOI }) |

                @Html.ActionLink("Xóa", "Delete", new { id = item.MANOI })
            </td>
        </tr>
    }

</table>
