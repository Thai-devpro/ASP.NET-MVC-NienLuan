@model IEnumerable<NienLuanCoSo.CHIENDICH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    <a class="nav-link" href="https://localhost:44334/QGHienVat/Index">
        <span>Xem danh sách quyên góp</span>
    </a>
</h2>
<style>
    .body {
        font-family: 'Roboto', sans-serif;
    }

    .box-posts {
        background: #EEE5DE;
        border: none;
        border-radius: 15px;
        box-shadow: 0px 0px 5px 5px #aaa;
        background: #f5f5f5;
        width: 100%;
        height: 350px;
        border: solid 1px #0098a1;
        margin-bottom: 50px;
    }

        .box-posts:hover {
            box-shadow: 0px 0px 5px 5px #789;
        }
</style>
<br />
<br />
<br />
<table style="width: 100%; font-family: 'Roboto', sans-serif;">
    <tr style="width: 100%;">
        <td style="width: 50%;">
            <p style="color:#111;font-family: 'Roboto', sans-serif; cursive; font-weight:500; font-size:35px; ">Chiến dịch đang diễn ra</p>
        </td>
        <td style="width: 50%;     text-align: right;">
            <div class="container-1">
                @using (Html.BeginForm())
                {
                    <div class="form-group form-inline">
                        <form style="margin: 0px; padding: 0px;">
                            <span>Tìm chiến dịch: </span> @Html.TextBox("SearchString", "", new { @class = "form-control" })
                            <input type="submit" class="btn btn-success" value="Tìm kiếm" />
                        </form>
                    </div>
                }
            </div>
        </td>
    </tr>
</table>
<br>
<div style="font-family: 'Roboto', sans-serif;">
    @foreach (var item in Model)
    {
        <table class="box-posts">
            <tr style="width: 100%;">


                <td style="width: 35%;">
                    <a href="@Url.Action("Details", "ChienDich", new { id = item.MA_CD })">
                        
                        <img src="@Url.Content("~/Content/images/chiendich/"+item.ANH_CD)" width: 100%; height:350px; border-radius: 25px />

                    </a>

                </td>
                <td style="width: 60%;">
                    <a>


                        <div style="height: 20%;  line-height:80% ; ">


                            <h2 style="margin-top: 110px;">
                                <a href="@Url.Action("Details", "ChienDich", new { id = item.MA_CD })">

                                    @Html.DisplayFor(modelItem => item.TEN_CD)

                                </a>
                            </h2>
                        </div>
                    </a>
                    <a>@Html.DisplayFor(modelItem => item.NOIDUNG_CD)</a>
                    <hr>
                    <div style="height: 60%; color:#000">
                        <table>


                            <tr>


                                <td>


                                    <table>
                                        <tr>
                                            <td><i class="fas fa-barcode"></i></td>
                                            <td style="padding-left: 10px;">
                                                <b> Ngày bắt đầu: </b>@Html.DisplayFor(modelItem => item.NGAYBATDAU)
                                            </td>
                                        </tr>


                                        <tr>


                                            <td>
                                                <i class="fas fa-calendar-alt"></i>
                                            </td>
                                            <td style="padding-left: 10px;">
                                                <b> Ngày kết thúc: </b> @Html.DisplayFor(modelItem => item.NGAYKETTHUC)
                                            </td>

                                        </tr>

                                    </table>
                                </td>

                            </tr>

                        </table>
                        <h3>
                            <a href="@Url.Action("Create", "QGHienVat", new { id = item.MA_CD })">

                                Quyên góp

                            </a>
                        </h3>
                    </div>

                </td>
            </tr>
        </table>


    }
</div>

