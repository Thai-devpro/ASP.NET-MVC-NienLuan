@model NienLuanCoSo.TT_QUYENGOP_HIENVAT

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đăng ký</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Quyên góp hiện vật</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

   
    <div class="form-group">
        @Html.LabelFor(model => model.MA_MTQ, "Mạnh thường quân", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <a style="width:280px" class="form-control">@Session["Taikhoanmtq"]</a>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MA_CD, "Chiến dịch", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MA_CD", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MA_CD, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MA_HV, "Hiện Vật", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MA_HV", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MA_HV, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SOLUONG_QG,"Số lượng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SOLUONG_QG, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SOLUONG_QG, "", new { @class = "text-danger" })
        </div>
    </div>
    <a>
        
    </a>
    
    <div class="form-group">
        @Html.LabelFor(model => model.GHICHU,"Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.GHICHU, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GHICHU, "", new { @class = "text-danger" })
        </div>
    </div>

 

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" onclick="" value="Quyên góp" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Về danh sách", "Index")
</div>
